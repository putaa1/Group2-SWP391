<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>newsList</servlet-name>
        <servlet-class>controller.news.newsList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listCate</servlet-name>
        <servlet-class>controller.Category.listCate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteCate</servlet-name>
        <servlet-class>controller.Category.deleteCate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateCate</servlet-name>
        <servlet-class>controller.Category.updateCate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newsList</servlet-name>
        <url-pattern>/newsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listCate</servlet-name>
        <url-pattern>/listCate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteCate</servlet-name>
        <url-pattern>/deleteCate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateCate</servlet-name>
        <url-pattern>/updateCate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
